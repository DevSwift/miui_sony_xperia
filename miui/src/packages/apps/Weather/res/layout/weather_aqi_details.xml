<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/aqi_pm25_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_background_disabled" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#313131"
            android:text="@string/act_aqi_pm25_title" />
        <TextView
            android:id="@+id/aqi_pm25_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#b2b2b2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aqi_pm10_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_background_disabled" >
        <TextView
            android:id="@+id/aqi_pm10_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#313131"
            android:text="@string/act_aqi_pm10_title" />
        <TextView
            android:id="@+id/aqi_pm10_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#b2b2b2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aqi_so2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_background_disabled" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#313131"
            android:text="@string/act_aqi_so2_title" />
        <TextView
            android:id="@+id/aqi_so2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#b2b2b2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aqi_no2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_background_disabled" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#313131"
            android:text="@string/act_aqi_no2_title" />
        <TextView
            android:id="@+id/aqi_no2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#b2b2b2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aqi_details_container"
        android:layout_width="match_parent"
        android:layout_height="26dip"
        android:layout_marginRight="5dip"
        android:gravity="bottom|right" >
        <TextView
            android:id="@+id/aqi_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#b2b2b2" />
    </LinearLayout>
</LinearLayout>