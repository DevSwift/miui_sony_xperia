<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_vertical"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listitem_weather_cycle_now_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/alert_provider_title"
            android:textColor="#FFFFFFFF"
            android:singleLine="true"
            style="@style/text_shadow" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/listitem_weather_cycle_now_txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dip"
                android:textSize="38sp"
                android:textColor="#FFFFFFFF"
                style="@style/text_shadow" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dip"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/listitem_weather_cycle_now_txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#FFFFFFFF"
                    style="@style/text_shadow" />
                <TextView
                    android:id="@+id/listitem_weather_cycle_now_txt_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dip"
                    android:textSize="14sp"
                    android:textColor="#FFFFFFFF"
                    style="@style/text_shadow" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/listitem_weather_cycle_now_txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:textSize="14sp"
            android:textColor="#FFFFFFFF"
            style="@style/text_shadow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:id="@+id/weather_cycle_now_pm25_container"
        android:visibility="gone" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFFFF"
            style="@style/text_shadow"
            android:text="@string/act_weather_main_aqi_title" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/weather_cycle_now_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#FFFFFFFF"
                style="@style/text_shadow" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="1dip"
                android:src="@drawable/weather_cycle_aqi_image" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>