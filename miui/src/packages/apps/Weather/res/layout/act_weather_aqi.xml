<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/weather_aqi_splite_image" />
    <LinearLayout
        android:id="@+id/weather_aqi_index_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip" >
            <TextView
                android:id="@+id/weather_aqi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:textColor="#313131" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="bottom"
                android:layout_marginBottom="25dip"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/weather_aqi_cityname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#313131" />
                <TextView
                    android:id="@+id/weather_aqi_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#313131" />
            </LinearLayout>
         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/weather_aqi_image" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:text="@string/act_aqi_value_hazardous"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:text="@string/act_aqi_value_dangerous"
                    android:layout_weight="1" />
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:text="@string/act_aqi_value_unhealthy"
                    android:layout_weight="1" />
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:text="@string/act_aqi_value_light_pollution"
                    android:layout_weight="1" />
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:text="@string/act_aqi_value_good"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:singleLine="true"
                    android:text="@string/aqi_quality_index_hazardous"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:singleLine="true"
                    android:text="@string/aqi_quality_index_dangerous"
                    android:layout_weight="1" />
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:singleLine="true"
                    android:text="@string/aqi_quality_index_unhealthy"
                    android:layout_weight="1" />
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:singleLine="true"
                    android:text="@string/aqi_quality_index_light_pollution"
                    android:layout_weight="1" />
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:singleLine="true"
                    android:text="@string/aqi_quality_index_good"
                    android:layout_weight="1" />
            </LinearLayout>
          </LinearLayout>
    </LinearLayout>

    <include layout="@layout/weather_aqi_details" />

</LinearLayout>